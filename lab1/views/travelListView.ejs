<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Travel List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="container">
    <h1 class="text-center">Travels</h1>
    <div class="row d-flex justify-content-center my-4">
        <div class="col-6">
            <ul class="list-group">
                <% travels.forEach(travel=> { %>
                    <li class="list-group-item">
                        <a class="fw-bold" href="/item/<%= travel.id %>">
                            <%= travel.name %>:
                        </a>
                        <a href="/item/<%= travel.id %>">
                            <%= travel.description %>
                        </a>
                    </li>
                    <% }) %>
            </ul>
        </div>
    </div>


    <div class="d-flex justify-content-center my-4">
        <form action="/create" method="POST">
            <input type="text" name="name" placeholder="Enter travel name" required>
            <input type="text" name="description" placeholder="Enter travel description" required>
            <button type="submit">Add Travel</button>
        </form>
        <form class="mx-1" action="/privacy" method="GET">
            <button type="submit">Privacy</button>
        </form>
        <form class="mx-1" action="/about" method="GET">
            <button type="submit">About</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>